{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "wx": true,
    "getCurrentPages": true,
    "getApp": true,
    "Page": true,
    "Component": true,
    "App": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "camelcase": ["off"],
    "prefer-promise-reject-errors": ["error", {"allowEmptyReject": true}],
    "no-unused-expressions": ["off"],
    "object-curly-spacing": ["error", "always"]
  }
}