{
  "include": [
    "build/**/*.ts",
    "src/**/*.ts",
    "template/**/*.ts",
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "types": ["node", "miniprogram-api-typings"]
  }
}